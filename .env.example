# CultFit Clone - Environment Variables Template
# Copy this file to .env and fill in your actual values

# MongoDB Connection URL (required)
# Local MongoDB:
MONGO_URL=mongodb://localhost:27017/cultfit-clone

# Or MongoDB Atlas (cloud):
# MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/cultfit-clone

# JWT Secret Key (required for authentication)
# Generate a secure random string
# Example: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Server Port (optional, defaults to 3000)
PORT=3000
